<div class='container'>
  <div class='col-md-offset-2 col-md-8'>

    <div class='title col-md-8'>
      <h1>MaZeeeeen</h1>
    </div>
    <div class='col-md-8 panel panel-default' id='maze-body'>
      <%= render partial: 'maze/maze', locals: {height: @height, width: @width, maze: @maze, start: @start, goal: @goal} %>
    </div>

    <div class='col-md-4 control-box'>
      <div class='col-md-12 seek-btn-box'>
        <div class='form-group'>
          <%= button_to "経路を算出", maze_seek_path, class: 'btn btn-success form-control seek-btn', remote: true %>
        </div>
      </div>
      <div class='col-md-12 config-box'>
        <form class='form-inline'>
          <div class='form-group'>
            <%= form_tag root_path, method: :get do %>
              <div class='input-group'>
                <div class='input-group-addon'> <%= "高さ" %> </div>
                <%= number_field_tag :height, @height, class: 'form-control' %>
              </div>
              <div class='input-group'>
                <div class='input-group-addon'> <%= "幅　" %> </div>
                <%= number_field_tag :width, @width, class: 'form-control' %>
              </div>
              <div class='size-change-btn'>
                <%= submit_tag '変更', class: 'btn btn-block btn-info' %>
              </div>
            <% end %>
          </div>
        </form>
      </div>
  </div>
  </div>
</div>
